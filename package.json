{
  "name": "@gestell/mcp",
  "version": "0.5.0",
  "type": "module",
  "main": "dist/library.cjs.js",
  "module": "dist/library.js",
  "types": "dist/library.d.ts",
  "exports": {
    ".": {
      "import": "./dist/library.js",
      "require": "./dist/library.cjs.js",
      "types": "./dist/library.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "bun run server/entry.ts",
    "lint": "eslint .",
    "build:lib": "rollup -c compile/rollup.config.js",
    "build:cli": "bun build server/entry.ts --target node --outfile ./dist/entry.js",
    "build:types": "tsc --project compile/tsconfig.build.json",
    "build:schemas": "bun run compile/generate.ts",
    "build": "rm -rf dist && npm run build:lib && npm run build:cli && npm run build:types && bun run build:schemas"
  },
  "bin": {
    "gestell-mcp": "./dist/entry.js"
  },
  "dependencies": {
    "@gestell/sdk": "1.4.1",
    "@modelcontextprotocol/sdk": "1.11.4",
    "dotenv": "16.5.0",
    "fastify": "5.3.3",
    "pino-pretty": "13.0.0",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@ai-sdk/google": "1.2.18",
    "@eslint/js": "9.27.0",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/bun": "1.2.13",
    "ai": "4.3.15",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jiti": "2.4.2",
    "rollup-plugin-dts": "6.2.1",
    "typescript-eslint": "8.32.1",
    "zod-to-json-schema": "3.24.5"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  }
}
