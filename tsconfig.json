{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",

    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "declaration": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "paths": {
      "@server/*": ["server/*"],
      "@tool/*": ["tool/*"],
      "@resource/*": ["resource/*"],
      "@client/*": ["client/*"],
      "@workflow/*": ["workflow/*"]
    }
  },
  "include": [
    "rollup.config.js",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
